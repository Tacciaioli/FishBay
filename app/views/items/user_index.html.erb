<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://external-preview.redd.it/lS15HBEbnBjBnAHpKJ2-CrMylW1sNSA0KJ7gDcg5ADk.jpg?auto=webp&s=1754f6602a1bf91485fdedb2b7c5c5708b38e10b);">
  <div class="container">
    <h1>Fish anywhere!</h1>
    <p>Change your life, learn to fish.</p>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @items.each do |item| %>
  <div class="col">
    <div class="card" style="width: 18rem; ">
      <img style="height: 150px; object-fit: cover; object-position: center" class="card-img-top" src="<%= cl_image_path item.photo.key %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
        <p class="card-text"><%= item.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= item.brand %></li>
        <li class="list-group-item"><span>Size: </span><%= item.size %> Meters</li>
        <li class="list-group-item"><span>Price: </span><%= item.price %>â‚¬/K</li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link">Editar</a>
        <%# <a href="#" class="card-link">Remover</a> %>
        <%= link_to "Remover", item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
  <% end %>
</div>
